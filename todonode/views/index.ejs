<!DOCTYPE html>
<html>
<head>
  <title>Document</title>
   <style>

  * {
    box-sizing: border-box;
  }

  body {
    background: #000000;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding: 40px 20px;
    color: #333;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    background: rgba(59, 59, 180, 0.768);
    padding: 30px 40px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  h1 {
    text-align: center;
    margin-bottom: 30px;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 1.2px;
  }

  form {
    display: flex;
    gap: 12px;
    margin-bottom: 25px;
  }

  input[type="text"] {
    flex-grow: 1;
    padding: 12px 15px;
    font-size: 16px;
    border: 2px solid #ccc;
    border-radius: 8px;
    transition: border-color 0.3s ease;
  }

  input[type="text"]:focus {
    border-color: #6c63ff;
    outline: none;
  }

  button {
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    color: white;
  }

  .add-btn {
    background-color: #1ee100;
  }

  .add-btn:hover {
    background-color: #594fdb;
  }

  ul {
    list-style: none;
    padding-left: 0;
  }

  li {
    display: flex;
    align-items: center;
    margin-bottom: 18px;
    gap: 12px;
  }

  .task-form {
    flex-grow: 1;
    display: flex;
    gap: 10px;
  }

  .task-form input[type="text"] {
    border: 2px solid #ddd;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 15px;
    transition: border-color 0.3s ease;
  }

  .task-form input[type="text"]:focus {
    border-color: #6c63ff;
    outline: none;
  }

  .edit-btn {
    background-color: #00b894;
  }

  .edit-btn:hover {
    background-color: #019875;
  }

  .delete-btn {
    background-color: #d63031;
  }

  .delete-btn:hover {
    background-color: #b81c1c;
  }
</style>

   </style>
</head>
<body>
  <div class="container">
    <h1>To-Do List</h1>
    <form action="/add" method="POST">
      <input type="text" name="task" placeholder="Enter a new task" required>
      <button type="submit" class="add-btn">Add</button>
    </form>

    <ul>
      <% todos.forEach(todo => { %>
        <li>
          <form class="task-form" action="/edit" method="POST">
            <input type="hidden" name="id" value="<%= todo.id %>">
            <input type="text" name="newTask" value="<%= todo.task %>" required>
            <button type="submit" class="edit-btn">Edit</button>
          </form>
          <form action="/delete" method="POST" style="margin-left: 10px;">
            <input type="hidden" name="id" value="<%= todo.id %>">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
