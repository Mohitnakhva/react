<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card shadow border-0">
      
      <div class="position-relative">
        <img src="<%= book.image %>" class="card-img-top rounded-top" alt="<%= book.title %>" style="height: 400px; object-fit: cover; border-bottom: 1px solid #e2e8f0;">
        <span class="badge bg-primary position-absolute top-0 start-0 m-3 fs-6">Price: $<%= book.price.toFixed(2) %></span>
        <span class="badge bg-success position-absolute top-0 end-0 m-3 fs-6">Stock: <%= book.stock %></span>
      </div>

      <div class="card-body">
        <h1 class="card-title text-primary fw-bold"><%= book.title %></h1>
        <h6 class="card-subtitle mb-3 text-muted fst-italic">by <%= book.author %></h6>

        <div class="mb-4">
          <ul class="list-unstyled">
            <li><strong>ISBN:</strong> <%= book.isbn %></li>
            <li class="mt-3"><strong>Description:</strong></li>
          </ul>
          <p class="card-text"><%= book.description %></p>
        </div>

        <div class="btn-group d-flex gap-2 flex-wrap">
          <a href="/books/<%= book._id %>/edit" class="btn btn-warning w-100">‚úèÔ∏è Edit</a>
          
          <form action="/books/<%= book._id %>?_method=DELETE" method="POST" class="d-inline w-100">
            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this book?')">üóëÔ∏è Delete</button>
          </form>
          
          <a href="/books" class="btn btn-secondary w-100">‚Üê Back to Books</a>
        </div>
      </div>
    </div>
  </div>
</div>
