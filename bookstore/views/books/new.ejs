<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="mb-4 text-center">ðŸ“– Add a New Book</h1>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>

    <form action="/books" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Book Title</label>
        <input type="text" id="title" name="title" class="form-control" placeholder="Enter book title" required>
      </div>

      <div class="mb-3">
        <label for="author" class="form-label">Author Name</label>
        <input type="text" id="author" name="author" class="form-control" placeholder="Author full name" required>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Book Price ($)</label>
        <input type="number" id="price" name="price" class="form-control" step="0.01" min="0" placeholder="e.g. 19.99" required>
      </div>

      <div class="mb-3">
        <label for="isbn" class="form-label">ISBN Code</label>
        <input type="text" id="isbn" name="isbn" class="form-control" placeholder="ISBN number" required>
      </div>

      <div class="mb-3">
        <label for="stock" class="form-label">Stock Quantity</label>
        <input type="number" id="stock" name="stock" class="form-control" min="0" placeholder="e.g. 50" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Short Description</label>
        <textarea id="description" name="description" class="form-control" rows="4" placeholder="Describe the book in a few lines..." required></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Cover Image</label>
        <input type="file" id="image" name="image" class="form-control" accept="image/*">
        <div class="form-text">Recommended size: less than 5MB</div>
      </div>

      <div class="mb-3 d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-primary px-4">Add Book</button>
        <a href="/books" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
