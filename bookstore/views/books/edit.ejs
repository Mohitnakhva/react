<html>
    <head>
        <style>
            body {
  background: #f1f5f9;
  font-family: 'Segoe UI', sans-serif;
}

.row {
  margin-top: 40px;
}

h1.mb-4 {
  font-size: 2rem;
  font-weight: bold;
  border-left: 4px solid #0d6efd;
  padding-left: 12px;
  color: #1e293b;
}

.form-label {
  font-weight: 600;
  color: #334155;
}

.form-control {
  border-radius: 8px;
  border: 1px solid #cbd5e1;
  padding: 10px 12px;
  font-size: 1rem;
  transition: border-color 0.3s;
}

.form-control:focus {
  border-color: #0d6efd;
  box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.2);
  outline: none;
}

textarea.form-control {
  resize: vertical;
  min-height: 100px;
}

.img-thumbnail {
  border-radius: 6px;
  border: none;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.form-text {
  font-size: 0.85rem;
  color: #64748b;
}

.btn {
  border: none;
  padding: 10px 18px;
  font-weight: 500;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s;
}

.btn-primary {
  background-color: #0d6efd;
  color: #fff;
}

.btn-primary:hover {
  background-color: #0b5ed7;
}

.btn-secondary {
  background-color: #e2e8f0;
  color: #334155;
}

.btn-secondary:hover {
  background-color: #cbd5e1;
}

.alert.alert-danger {
  background-color: #fee2e2;
  color: #b91c1c;
  border-left: 5px solid #ef4444;
  padding: 12px;
  border-radius: 6px;
  margin-bottom: 20px;
}

        </style>
    </head>
    <div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="mb-4">✏️ Edit Book</h1>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>

    <form action="/books/<%= book._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" required>
      </div>

      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control" id="author" name="author" value="<%= book.author %>" required>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" value="<%= book.price %>" required>
      </div>

      <div class="mb-3">
        <label for="isbn" class="form-label">ISBN</label>
        <input type="text" class="form-control" id="isbn" name="isbn" value="<%= book.isbn %>" required>
      </div>

      <div class="mb-3">
        <label for="stock" class="form-label">Stock</label>
        <input type="number" class="form-control" id="stock" name="stock" min="0" value="<%= book.stock %>" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="4" required><%= book.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Book Cover Image</label>
        <% if (book.image) { %>
          <div class="mb-2">
            <img src="<%= book.image %>" alt="<%= book.title %>" class="img-thumbnail" style="max-width: 200px;">
          </div>
        <% } %>
        <input type="file" class="form-control" id="image" name="image" accept="image/*">
        <div class="form-text">Upload a new book cover image (max 5MB)</div>
      </div>

      <div class="mb-3 d-flex gap-3">
        <button type="submit" class="btn btn-primary">Update Book</button>
        <a href="/books" class="btn btn-secondary">Cancel</a>
      </div>

    </form>
  </div>
</div>

</html>